<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root"
            prefHeight="1024.0" prefWidth="1440.0"
            stylesheets="@css/landing_page.css"
            xmlns="http://javafx.com/javafx/22.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.motorphui.ui.LandingPage">

    <children>
        <!-- Buttons moved under the logo to the right side -->
        <VBox fx:id="container"
              spacing="28.0"
              AnchorPane.topAnchor="470.0"
              AnchorPane.leftAnchor="1265.0">
            <Button fx:id="employees_button"
                    layoutX="902.0" layoutY="494.0"
                    mnemonicParsing="false"
                    onAction="#handleEmployeeButton"
                    prefHeight="46.0" prefWidth="400.0"
                    text="Employees">
                <font>
                    <Font name="Century Gothic" size="20.0"/>
                </font>
            </Button>
            <Button fx:id="hr_button"
                    layoutX="902.0" layoutY="580.0"
                    mnemonicParsing="false"
                    onAction="#handleHRButton"
                    prefHeight="46.0" prefWidth="400.0"
                    text="Human Resources">
                <font>
                    <Font name="Century Gothic" size="20.0"/>
                </font>
            </Button>
            <Button fx:id="finance_button"
                    layoutX="902.0" layoutY="494.0"
                    mnemonicParsing="false"
                    onAction="#handleFinanceButton"
                    prefHeight="46.0" prefWidth="400.0"
                    text="Finance">
                <font>
                    <Font name="Century Gothic" size="20.0"/>
                </font>
            </Button><!--
            <Button fx:id="it_button"
                    layoutX="902.0" layoutY="494.0"
                    mnemonicParsing="false"
                    onAction="#handleITButton"
                    prefHeight="46.0" prefWidth="400.0"
                    text="IT">
                <font>
                    <Font name="Century Gothic" size="20.0"/>
                </font>
            </Button>-->
            <Button fx:id="exit_button"
                    layoutX="902.0" layoutY="662.0"
                    mnemonicParsing="false"
                    onAction="#handleExitButton"
                    prefHeight="46.0" prefWidth="400.0"
                    text="Exit">
                <font>
                    <Font name="Century Gothic" size="20.0"/>
                </font>
            </Button>
        </VBox>
    </children>
</AnchorPane>